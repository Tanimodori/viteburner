{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@ns": ["./NetscriptDefinitions.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "NetscriptDefinitions.d.ts", "vite.config.ts"]
}
